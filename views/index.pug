title Leaders like me
link(rel="stylesheet", href="../public/styles.css")
script(src="scripts.js")
link(rel="preconnect", href="https://fonts.gstatic.com")
link(href="https://fonts.googleapis.com/css2?family=New+Tegomin&display=swap", rel="stylesheet")
.header-container
  header
    p
      a(href="https://www.youtube.com/watch?v=TiheM6wSwes&ab_channel=TEDxTalks") #representationmatters
.logos
  img(src="../images/leaders.png", alt="Leaders")
  h1 Leaders like me
.inputs
  .option1
    h2 My gender is
    span.custom-dropdown
      select
        option Female ♀️
        option Male ♂
        option Transgender ⚨
        option Gender non-binary ⚥
  .option2
    h2 I identify as
    span.custom-dropdown
      select
        option Gay ⚣
        option Heterosexual ⚤
        option Bisexual ⚥
        option None of the above
  .option3
    h2 I like
    span.custom-dropdown
      select
        option Science
        option Technology
        option Engineering
        option Arts
        option Math
        option Social justice
input(type="submit", value="Submit")
